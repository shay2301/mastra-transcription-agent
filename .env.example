# Groq API Key (RECOMMENDED - FREE tier available!)
# Get your key at: https://console.groq.com
# See GROQ_SETUP.md for step-by-step instructions
GROQ_API_KEY=gsk_...
GROQ_BASE_URL=https://api.groq.com/openai/v1
GROQ_MODEL=whisper-large-v3

# OpenRouter (Alternative - doesn't support Whisper audio transcription)
# OPENROUTER_API_KEY=sk-or-v1-...
# OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
# OPENROUTER_MODEL=openai/whisper-large-v3

# Server Configuration
PORT=3000
HOST=0.0.0.0

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Audio Processing
MAX_FILE_SIZE_MB=19.5
CHUNK_SIZE_SECONDS=90
CHUNK_OVERLAP_SECONDS=0.5

# Transcription
DEFAULT_LANGUAGE=auto
ENABLE_TIMESTAMPS=true

# Storage
PERSIST_TRANSCRIPTS=true
DATA_DIR=./data

# Discord Bot (optional)
DISCORD_BOT_TOKEN=
DISCORD_CLIENT_ID=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
